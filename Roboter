    analogWrite(ER,V);
    G = 12;
    Z = 0; 
     delay(10);
  }
   
    if(Z == 13){
    digitalWrite(ML,HIGH);
    digitalWrite(MR,HIGH);
    analogWrite(EL,V);
    analogWrite(ER,V);
  G = 13;  
 Z = 0;
 delay(10);
  } 
  
    if(Z == 14){
