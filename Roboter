  } 
  
   if(Z == 17){
    digitalWrite(ML,HIGH);
    digitalWrite(MR,LOW);
    analogWrite(EL,V);
    analogWrite(ER,R);
   G = 17;
   Z = 0;
   delay(10);
  }
  


  
  
 } 

               if(M = 1) {
                digitalWrite(ML,LOW);
                digitalWrite(MR,LOW);
                analogWrite(EL,V);
                analogWrite(ER,V);
                delay(1000);
                if(distant2 >= 30) {
                digitalWrite(ML,HIGH);
                digitalWrite(MR,LOW);
                analogWrite(EL,V);
                analogWrite(ER,0);
                delay(500);
                digitalWrite(ML,LOW);
                digitalWrite(MR,HIGH);
                analogWrite(EL,0);
                analogWrite(ER,V);
                M = 0;
                
                }
                
               
               } 
 
 }
 
  
  
  
  
  
  
  
  
  
  
  
